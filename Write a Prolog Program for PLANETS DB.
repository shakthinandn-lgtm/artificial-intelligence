% ------------------------------
% PLANETS DATABASE
% ------------------------------

% planet(Name, OrderFromSun, Type, DistanceFromSunMillionKm, Moons).
planet(mercury, 1, terrestrial, 58, 0).
planet(venus,   2, terrestrial, 108, 0).
planet(earth,   3, terrestrial, 150, 1).
planet(mars,    4, terrestrial, 228, 2).
planet(jupiter, 5, gas_giant,   778, 79).
planet(saturn,  6, gas_giant,   1430, 83).
planet(uranus,  7, ice_giant,   2870, 27).
planet(neptune, 8, ice_giant,   4500, 14).

% ------------------------------
% RULES
% ------------------------------

% find if a planet has moons
has_moons(Name) :-
    planet(Name, _, _, _, Moons),
    Moons > 0.

% find planets of a given type
planets_of_type(Type, Planets) :-
    findall(Name, planet(Name, _, Type, _, _), Planets).

% check which planet is farther than a given distance (in million km)
farther_than(Distance, Name) :-
    planet(Name, _, _, Dist, _),
    Dist > Distance.

% get the planet with the maximum moons
max_moons(Planet) :-
    findall(M, planet(_, _, _, _, M), MoonCounts),
    max_list(MoonCounts, Max),
    planet(Planet, _, _, _, Max).
